{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "module": "es2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
		"es6",
		"dom",
		"es2017"
    ],
  },
  "angularCompilerOptions": {
	"preserveWhitespaces": "off",
	"enableIvy": false,
  "allowSyntheticDefaultImports":true
  }
}
